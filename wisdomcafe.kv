<MainMenuScreen>:
    name: "mainmenuscreen"
    md_bg_color: "f4f1de"
    MDFloatLayout:
        pos_hint: {"center_x":0.5, "center_y": 0.5}
        orientation: "vertical"
        Image:
            source: "images/logo.png"
            size_hint_y: None
            height: dp(150)
            pos_hint: {"center_x":0.5, "center_y": 0.65}
        MDLabel:
            text: "Wisdom Cafe"
            font_size: 60
            font_name: "Fonts/Nexa-Heavy.ttf"
            halign: "center"
            color: "black"
            pos_hint: {"center_y": 0.51}
        MDRoundFlatButton:
            on_release:
                app.root.current = "workerloginscreen"
                root.manager.transition.direction = "left"
            size_hint: .5,.08
            text: "WORKER"
            font_size: 30
            font_name: "Fonts/Nexa-Heavy.ttf"
            pos_hint: {"center_x": .5, "center_y": 0.3}
            md_bg_color: "4f5f80"
            line_color: 0,0,0,0
            text_color:"white"
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0.1
                BoxShadow:
                    pos: self.pos
                    size: self.size
                    offset: 0, -10
                    spread_radius: -10, -10
                    border_radius: 40, 40, 40, 40
                    blur_radius: 40
        MDRoundFlatButton:
            on_release:
                app.root.current = "customerloginscreen"
                root.manager.transition.direction = "left"
            size_hint: .5,.08
            text: "CUSTOMER"
            font_size: 30
            font_name: "Fonts/Nexa-Heavy.ttf"
            pos_hint: {"center_x": .5, "center_y": 0.2}
            md_bg_color: "4f5f80"
            line_color: 0,0,0,0
            text_color:"white"
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0.1
                BoxShadow:
                    pos: self.pos
                    size: self.size
