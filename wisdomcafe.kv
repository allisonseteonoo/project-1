                    spread_radius: -10, -10
                    border_radius: 40, 40, 40, 40
                    blur_radius: 40

<WorkerLoginScreen>:
    md_bg_color: "f4f1de"
    name: "workerloginscreen"
    MDFloatLayout:
        size_hint: 0.8,0.6
        pos_hint: {"center_x":0.5,"center_y":0.5}
        canvas.before:
            Color:
                rgba: 0,0,0,0.1
            BoxShadow:
                pos: self.pos
                size: self.size
                offset: 0, -10
                spread_radius: -10, -10
                border_radius: 40, 40, 40, 40
                blur_radius: 40
        canvas:
            Color:
                rgba: 1,1,1,1
            RoundedRectangle:
                size:self.size
                pos:self.pos
                radius: [40]
    MDFloatLayout:
        orientation: "vertical"
        MDIconButton:
            theme_icon_color: "Custom"
            icon: "arrow-left-circle"
            icon_color: "3d415a"
            on_release:
                app.root.current = "mainmenuscreen"
                root.manager.transition.direction = "right"
            pos_hint: {"center_x": .1, "center_y": 0.93}
        Image:
            source: "images/logo.png"
            size_hint_y: None
            height: dp(150)
            pos_hint: {"center_x":0.5, "center_y": 0.8}
        MDLabel:
            text: "Wisdom Cafe"
            font_size: 60
            font_name: "Fonts/Nexa-Heavy.ttf"
            halign: "center"
            color: 0,0,0,1
            pos_hint: {"center_y": 0.65}
        MDLabel:
            text: "ID"
            size_hint: 0.7, 0.05
            font_size: 30
            color: 0,0,0,1
            pos_hint: {"center_x": 0.52,"center_y": 0.57}
            font_name: "Fonts/Nexa-Heavy.ttf"
        MDTextField:
            id: identification
            icon_right: "account"
            radius: [10]
            pos_hint: {"center_x": 0.5,"center_y": 0.52}
            size_hint_x: 0.7
            mode: "fill"
            fill_color_normal: "e9edf5"
            active_line: False
            multiline: False
            theme_text_color: "Custom"
            text_color_normal: "black"
            text_color_focus: "black"
            on_text: self.text = self.text.replace(" ","")
            write_tab: False
        MDLabel:
            text: "Password"
            size_hint: 0.7, 0.05
            font_size: 30
            color: "black"
            pos_hint: {"center_x": 0.52,"center_y": 0.45}
            font_name: "Fonts/Nexa-Heavy.ttf"
        MDTextField:
            id: passwrd
            icon_right: "eye-off"
            password: True
            pos_hint: {"center_x": 0.5,"center_y": 0.40}
            size_hint_x: 0.7
            radius: [10]
            mode: "fill"
            fill_color_normal: "e9edf5"
            active_line: False
            multiline: False
            theme_text_color: "Custom"
            text_color_normal: "black"
            text_color_focus: "black"
            on_text: self.text = self.text.replace(" ","")
            write_tab: False
        MDBoxLayout:
            size_hint: .7,None
            height: "30dp"
            pos_hint: {"center_x": 0.5,"center_y": 0.32}
            MDCheckbox:
                id: passwordcheckbox
                size_hint: None, None
                width: "30dp"
                height: "30dp"
                on_active:
                    passwrd.password = not self.active
                    passwrd.icon_right = 'eye' if self.active else 'eye-off'
            MDLabel:
                text: "[ref=Show Password]Show Password[/ref]"
                markup: True
                font_name: "Fonts/Nexa-Heavy.ttf"
        MDRoundFlatButton:
            size_hint: .5,.05
            text: "LOGIN"
            font_size: 30
            font_name: "Fonts/Nexa-Heavy.ttf"
            pos_hint: {"center_x": .5, "center_y": 0.2}
            md_bg_color: "4f5f80"
            text_color:"white"
            line_color: 0,0,0,0
            on_press:
                root.do_login(identification.text, passwrd.text)
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0.1
                BoxShadow:
                    pos: self.pos
                    size: self.size
                    offset: 0, -10
                    spread_radius: -10, -10
                    border_radius: 40, 40, 40, 40
                    blur_radius: 40

